<Styles xmlns="https://github.com/avaloniaui"
        xmlns:forms="clr-namespace:Avalonia.Forms.Controls;assembly=Avalonia.Forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="forms|AppBarButton" >
    <Setter Property="Width"
            Value="72" />
    <Setter Property="Padding"
            Value="8, 5" />
    <Setter Property="Background"
            Value="{DynamicResource TransparentWhiteBrush}" />
    <Setter Property="HorizontalContentAlignment"
            Value="Center" />
    <Setter Property="VerticalContentAlignment"
            Value="Center" />
    <Setter Property="Template">
      <ControlTemplate>
        <Grid Background="{TemplateBinding Background}">
          <StackPanel VerticalAlignment="Center" >
            <ContentPresenter Content="{TemplateBinding Icon}" HorizontalAlignment="Center" />
            <TextBlock Margin="0,6,0,0" FontFamily="Calibri"  FontSize="12"
                   Text="{TemplateBinding Label}" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
          </StackPanel>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>