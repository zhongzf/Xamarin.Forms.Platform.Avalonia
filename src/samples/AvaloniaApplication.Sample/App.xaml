<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
					   xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:Xamarin.Forms.Platform.Avalonia.Controls;assembly=Xamarin.Forms.Platform.Avalonia"
             xmlns:formsConverters="clr-namespace:Xamarin.Forms.Platform.Avalonia.Converters;assembly=Xamarin.Forms.Platform.Avalonia"
             xmlns:forms="clr-namespace:AvaloniaForms.Controls;assembly=AvaloniaForms"
             xmlns:converters="clr-namespace:AvaloniaForms.Converters;assembly=AvaloniaForms"
             x:Class="AvaloniaApplication.Sample.App">
  <Application.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
  </Application.Styles>
  
  <Application.Resources>
    <!-- Default Global Color -->
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="White" />
    <SolidColorBrush x:Key="AccentColor" Color="#3498db" />
	<SolidColorBrush x:Key="SystemColorControlAccentBrush" Color="#3498db" />
	<SolidColorBrush x:Key="DefaultTextForegroundThemeBrush" Color="Black" />

    <!-- Default Command Bar Color -->
    <SolidColorBrush x:Key="CommandBarBackgroundColor" Color="#3498db" />
    <SolidColorBrush x:Key="CommandBarBackgroundLightColor" Color="#78bae7" />
    <SolidColorBrush x:Key="CommandBarTextColor" Color="White" />

    <!-- Default Title Bar Color -->
    <SolidColorBrush x:Key="DefaultTitleBarBackgroundColor" Color="#3498db" />
    <SolidColorBrush x:Key="DefaultTitleBarTextColor" Color="White" />

    <!-- Default Tabbed Bar Color -->
    <SolidColorBrush x:Key="DefaultTabbedBarBackgroundColor" Color="#3498db" />
    <SolidColorBrush x:Key="DefaultTabbedBarTextColor" Color="White" />

    <system:Double x:Key="FontSizeExtraExtraSmall">12</system:Double>
    <system:Double x:Key="FontSizeExtraSmall">15</system:Double>
    <system:Double x:Key="FontSizeSmall">18</system:Double>
    <system:Double x:Key="FontSizeNormal">20</system:Double>
    <system:Double x:Key="FontSizeMedium">22</system:Double>
    <system:Double x:Key="FontSizeMediumLarge">25</system:Double>
    <system:Double x:Key="FontSizeLarge">32</system:Double>
    <system:Double x:Key="FontSizeExtraLarge">42</system:Double>
    <system:Double x:Key="FontSizeExtraExtraLarge">72</system:Double>
    <system:Double x:Key="FontSizeHuge">186</system:Double>
    <system:Double x:Key="FontSizeBody">14</system:Double>
    <system:Double x:Key="FontSizeCaption">12</system:Double>
    <system:Double x:Key="FontSizeHeader">46</system:Double>
    <system:Double x:Key="FontSizeSubtitle">20</system:Double>
    <system:Double x:Key="FontSizeTitle">24</system:Double>

    <FontFamily x:Key="FontFamilyNormal">Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamilySemiBold">Segoe UI</FontFamily>

    <converters:CaseConverter x:Key="LowerConverter" ConvertToUpper="False" />
    <converters:CaseConverter x:Key="UpperConverter" ConvertToUpper="True" />
    <converters:CollapseWhenEmptyConverter x:Key="CollapseWhenEmpty" />

    <formsConverters:PageToRenderedElementConverter x:Key="PageToRenderer" />
    <formsConverters:HeightConverter x:Key="HeightConverter" />
    <formsConverters:ColorConverter x:Key="ColorConverter" />
    <formsConverters:ImageConverter x:Key="ImageConverter" />

    <DataTemplate x:Key="ContainedPageTemplate">
      <ContentPresenter Content="{Binding Converter={StaticResource PageToRenderer}}" />
    </DataTemplate>

    <DataTemplate x:Key="CellTemplate">
      <controls:CellControl HorizontalContentAlignment="Stretch" Height="{Binding Cell.RenderHeight,Converter={StaticResource HeightConverter}}" />
    </DataTemplate>

    <DataTemplate x:Key="TableRoot">
      <TextBlock Margin="0,20,0,0" Text="{Binding Title, Converter={StaticResource LowerConverter}}" IsVisible="{Binding Text, Converter={StaticResource CollapseWhenEmpty}}" />
    </DataTemplate>

    <DataTemplate x:Key="TableSection">
      <TextBlock Margin="0,0,0,0" Text="{Binding Title, Converter={StaticResource LowerConverter}}" IsVisible="{Binding Text, Converter={StaticResource CollapseWhenEmpty}}" Foreground="{Binding TextColor,Converter={StaticResource ColorConverter},ConverterParameter=DefaultTextForegroundThemeBrush}" />
    </DataTemplate>


    <DataTemplate x:Key="TextCell">
      <StackPanel>
        <TextBlock
          Text="{Binding Text}"
          IsVisible="{Binding Text, Converter={StaticResource CollapseWhenEmpty}}"
          Foreground="{Binding TextColor, Converter={StaticResource ColorConverter}, ConverterParameter=DefaultTextForegroundThemeBrush}" />

        <TextBlock
          Text="{Binding Detail}"
          IsVisible="{Binding Text, Converter={StaticResource CollapseWhenEmpty}}"
          Foreground="{Binding DetailColor, Converter={StaticResource ColorConverter}, ConverterParameter=DefaultTextForegroundThemeBrush}"
          x:Name="detail"/>
      </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="ListViewHeaderTextCell">
      <StackPanel>
        <TextBlock
          Text="{Binding Text}"
          IsVisible="{Binding Text, Converter={StaticResource CollapseWhenEmpty}}"
          Foreground="{Binding TextColor, Converter={StaticResource ColorConverter}, ConverterParameter=DefaultTextForegroundThemeBrush}" />

        <TextBlock
          Text="{Binding Detail}"
          IsVisible="{Binding Text, Converter={StaticResource CollapseWhenEmpty}}"
          Foreground="{Binding DetailColor, Converter={StaticResource ColorConverter}, ConverterParameter=DefaultTextForegroundThemeBrush}"
          x:Name="detail" />
      </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="TabbedPageHeaderTemplate">
      <StackPanel Orientation="Vertical" Name="TabbedPageHeaderStackPanel">
        <Image Name="TabbedPageHeaderImage" DataContext="{Binding IconImageSource, Converter={StaticResource ImageConverter}}" Source="{Binding Value}" Width="16" Height="16" IsVisible="False" Margin="0,12,0,0"/>
        <TextBlock Name="TabbedPageHeaderTextBlock" Text="{Binding Title}"/>
      </StackPanel>
    </DataTemplate>

  </Application.Resources>
</Application>
